"""
Accounts Engine Server. This does the work of actually implementing the API
calls made by the user. Normal communications is done via the Accounts API
which then calls into this engine.
"""

import eventlet
eventlet.monkey_patch()

import os
import sys

# If ../accounts/__init__.py exists, add ../ to Python search path, so that
# it will override what happens to be installed in /usr/(local/)lib/python...
POSSIBLE_TOPDIR = os.path.normpath(os.path.join(os.path.abspath(sys.argv[0]),
                                   os.pardir,
                                   os.pardir))
if os.path.exists(os.path.join(POSSIBLE_TOPDIR, 'accounts', '__init__.py')):
    sys.path.insert(0, POSSIBLE_TOPDIR)

from tdafcommon.openstack.common import gettextutils

gettextutils.install('tdafcommon')

from oslo.config import cfg

from tdafcommon.openstack.common import log as logging
from tdafcommon.openstack.common import service

from tdafcommon.db import api as db_api
from accounts.rpc import api as rpc_api


LOG = logging.getLogger('accounts.engine')

if __name__ == '__main__':

    cfg.CONF(project='accounts', prog='accounts-engine')
    cfg.CONF.default_log_levels = ['amqplib=WARN',
                                   'sqlalchemy=WARN',
                                   'qpid.messaging=INFO',
                                   'keystone=INFO',
                                   'eventlet.wsgi.server=WARN',
                                   ]
    logging.setup('accounts')

    from accounts.engine import service as engine

    db_api.configure()
    srv = engine.EngineService(cfg.CONF.host, rpc_api.ENGINE_TOPIC)
    launcher = service.launch(srv)
    launcher.wait()
